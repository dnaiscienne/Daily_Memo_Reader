<resources>

    <style name="Theme.Bacon" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorPrimary">@color/deep_orange_500</item>
        <item name="android:colorPrimaryDark">@color/deep_orange_700</item>
        <item name="android:colorAccent">@color/teal_500</item>

    </style>

    <style name="Theme.Bacon.Detail">
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="Theme.Bacon.List">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/ltgray</item>
    </style>

    <style name="Theme.Bacon.List.Title">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>

    </style>

    <style name="Theme.Bacon.List.SubTitle">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Theme.Bacon.Article">
        <item name="android:fontFamily">sans-serif</item>
    </style>
    <style name="Theme.Bacon.Article.Title">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/detail_title_text_size</item>
    </style>
    <style name="Theme.Bacon.Article.Byline">
        <item name="android:textColor">@color/midgray</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="Theme.Bacon.Article.Body">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/gray_900</item>
        <item name="android:textColorLink">@color/teal_500</item>
        <item name="android:textSize">@dimen/detail_body_text_size</item>
    </style>
</resources>
